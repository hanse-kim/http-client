{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "sourceMap": true,
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "."
  },
  "include": [
    "src",
  ],
}